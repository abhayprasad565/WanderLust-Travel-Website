<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row ">
            <div class="col-md-8 offset-md-2">
                <h1>Edit listing</h1>
                <form action="/listings/<%= listing.id %>?_method=PUT" method="POST" noValidate
                    class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" id="" value="<%= listing.title%>" class="form-control"
                            required>
                        <div class="invalid-feedback">Add a Title</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="" cols="30" rows="5" class="form-control"
                            required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Add a Desctiption</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input type="text" value="<%= listing.image %>" name="listing[image]" required
                            class="form-control">
                        <div class="invalid-feedback">Enter valid image url</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" value="<%= listing.price %>" name="listing[price]" class="form-control"
                                required>
                            <div class="invalid-feedback">Add a valid price</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" value="<%= listing.country %>" name="listing[country]"
                                class="form-control" required>
                            <div class="invalid-feedback">Give a valid country name</div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" value="<%= listing.location %>" name="listing[location]" class="form-control"
                            required>
                        <div class="invalid-feedback">Give valid location</div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3 d-flex justify-content-center border border-0">
                        <button type="submit" class="btn btn-secondary border border-0"
                            style="background-color: #fd4955; color: white;">submit</button>
                </form>
            </div>
        </div>
    </body>